form.form-horizontal(role='form' method="POST", action="/login")
                  h2 Please Sign In
                  hr
                  // Username
                  .form-group
                    label.control-label.col-sm-2(for='username') Username:
                    .col-sm-10
                      input#username.form-control(type='text', placeholder=' Enter Username', name='username')
                  // Password
                  .form-group
                    label.control-label.col-sm-2(for='password') Password:
                    .col-sm-10
                      input#passwordd.form-control(type='password', placeholder='Enter Password', name='password')
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .checkbox
                        label
                          input(type='checkbox')
                          |  Remember me
                  .modal-footer
                    button.btn.btn-primary(type='submit' value="Log In") Submit
                    a.btn.btn-default(data-dismiss='modal') Close

