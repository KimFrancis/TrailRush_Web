doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Scrolling Nav - Start Bootstrap Template
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/scrolling-nav.css', rel='stylesheet')
    link(href='stylesheets/newscarousel.css', rel='stylesheet')
    link(href='stylesheets/project.css', rel='stylesheet')
    style.
      body {
      background-image:url(img/mountain_lake_scenery_2-wallpaper-1600x900.jpg);
      }
      .jumbotron{
      text-align: center;
      background-color: rgba(34,34,34,0.7);
      color:white;
      margin-top: 200px;
      margin-bottom: 150px;
      }
  body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
    // Navigation
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='#page-top')
            img(src='img/logo.png', height='18', width='140')
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse.navHeaderCollapse
          ul.nav.navbar-nav.navbar-right
            // Hidden li included to remove active class from about link when scrolled up past about section
            li.hidden
              a.page-scroll(href='#page-top')
            li
              a.page-scroll(href='#events') Events
            li
              a.page-scroll(href='#services') Services
            li
              a.page-scroll(href='#download') Download
            li
              a(href='#onlinereg', data-toggle='modal') Sign in
    #joinevent
      .container
        .jumbotron.vertical-center
          p Runner was sucessfully registered with bib number
          each post in users
            h1 #{post.bibid}
          a(href='http://localhost:3000/home') Home Page
    script(src='javascripts/jquery.js')
    script(src='javascripts/scrollingproject.js')
    // Bootstrap Core JavaScript
    script(src='javascripts/bootstrap.min.js')
    // Scrolling Nav JavaScript
    script(src='javascripts/jquery.easing.min.js')
    script(src='javascripts/scrolling-nav.js')
    script(src='javascripts/newscarousel.js')
