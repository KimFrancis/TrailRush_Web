doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Scrolling Nav - Start Bootstrap Template
    link(href='../../stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='../../stylesheets/scrolling-nav.css', rel='stylesheet')
    link(href='../../stylesheets/tableresults.css', rel='stylesheet')
    link(href='../../stylesheets/upcomingevent.css', rel='stylesheet')
   
  body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='index.html')
            img(src='../../img/logo.png', height='18', width='140')
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse.navHeaderCollapse
          ul.nav.navbar-nav.navbar-right
            // Hidden li included to remove active class from about link when scrolled up past about section
            li.hidden
              a.page-scroll(href='#page-top')
            li
              a.page-scroll(href='#about') About
            li
              a.page-scroll(href='#services') Services
            li.dropdown
              a.page-scroll.dropdown-toggle(href='#events', data-toggle='dropdown')
                | Events
                b.caret
              ul.dropdown-menu
                li
                  a(href='upcomingeventpage.htm') Upcoming Events
                li
                  a(href='#') Current Events
                li
                  a(href='pasteventpage.htm') Past Events
            li
              a.page-scroll(href='#download') Download
            li
              a.page-scroll(href='#contacts') Contact
    #events.events-section
      
        
        
  
      .container
        .row
          .col-lg-8
            each tevent in trailevents
              h1 #{tevent.EventName}
            hr
            // Preview Image
            #thumbnailevent
              img.img-responsive(src='../img/milo-flytospain-poster1.jpg', alt='', style='float:left')
            // Post Content
            each tevent in trailevents  
              p #{tevent.EventDescription}
              
            
            hr
            // Comments Form
          // Blog Sidebar Widgets Column
          .col-md-4
            .well
              h4 Date
              each tevent in trailevents
                p #{tevent.EventDate}
              h4 Organizer
              each tevent in trailevents
                p #{tevent.EventOrganizer}
              h4 Number of Stations
              each tevent in trailevents
                p #{tevent.EventStations}
              h4 Status
              each tevent in trailevents
                p #{tevent.EventStatus}  
                
        // /.row
        
    script(src='javascripts/jquery.js')
    script(src='javascripts/scrollingproject.js')
    // Bootstrap Core JavaScript
    script(src='javascripts/bootstrap.min.js')
    // Scrolling Nav JavaScript
    script(src='javascripts/jquery.easing.min.js')
    script(src='javascripts/scrolling-nav.js')
    script(src='javascripts/tableresults.js')

