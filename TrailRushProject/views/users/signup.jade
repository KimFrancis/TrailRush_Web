doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Scrolling Nav - Start Bootstrap Template
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/scrolling-nav.css', rel='stylesheet')
    link(href='stylesheets/newscarousel.css', rel='stylesheet')
    link(href='stylesheets/project.css', rel='stylesheet')
    style.
      body {
      background-image:url(img/mountain_lake_scenery_2-wallpaper-1600x900.jpg);
      }
      #signup #blackbox{
      background-color: rgba(34,34,34,0.7);
      padding-left: 30px;
      padding-right: 30px;
      padding-top: 5px;
      padding-bottom: 30px;
      vertical-align: center;
      margin-top: 130px;
      margin-bottom: 20px;
      }
      #signup form h2{
      color:white;
      padding-bottom:20px;
      }
      #signup form .btn{
      margin-top: 10px;
      margin-bottom:20px;
      background-color:#ff9640;
      border-color: none !important;
      color:white;
      }
      p{
      color:red;
      }
  body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
    // Navigation
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='http://localhost:3000/home')
            img(src='img/logo.png', height='18', width='140')
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse.navHeaderCollapse
          ul.nav.navbar-nav.navbar-right
            // Hidden li included to remove active class from about link when scrolled up past about section
            li.hidden
              a.page-scroll(href='http://localhost:3000/home#page-top')
            li
              a.page-scroll(href='http://localhost:3000/home#events') Events
            li
              a.page-scroll(href='http://localhost:3000/home#services') Services
            li
              a.page-scroll(href='http://localhost:3000/home#download') Download
            li
              a(href='http://localhost:3000/login') Sign in
    #signup
      .container
        .row
          .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
            #blackbox
              form(role='form', method="POST", action="/signup")
                h2
                  | Please Sign Up 
                  small It's free and always will be.
                
                .form-group
                  input#username.form-control.input-md(type='text', name='username', placeholder='Username',required, data-required-msg='Username is required', tabindex='1')
                .form-group
                  input#password.form-control.input-md(type='password', name='password',required, data-required-msg='Password is required', placeholder='Password', tabindex='2')
                .form-group
                  input#email.form-control.input-md(type='email', name='email',required, data-required-msg='Email is required', placeholder='Email Address', tabindex='3')
                .form-group
                  input#fname.form-control.input-md(type='text', name='fname', placeholder='Full Name',required, data-required-msg='Full Name is required',  tabindex='4')
                .row
                  .col-xs-12.col-sm-6.col-md-6
                    input#age.form-control.input-md(type='number', name='age', placeholder='Age',required, data-required-msg='Age is required',  tabindex='5')
                  .col-xs-12.col-sm-6.col-md-6
                    select#gender.form-control(tabindex='6',required, data-required-msg='Gender is required', )
                      option Male
                      option Female
                .form-group
                  p!=message
                  button.btn(type='submit', tabindex='7') Submit

                 
    script(src='javascripts/jquery.js')
    script(src='javascripts/scrollingproject.js')
    // Bootstrap Core JavaScript
    script(src='javascripts/bootstrap.min.js')
    // Scrolling Nav JavaScript
    script(src='javascripts/jquery.easing.min.js')
    script(src='javascripts/scrolling-nav.js')
    script(src='javascripts/newscarousel.js')
