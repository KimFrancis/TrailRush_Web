form.form-horizontal(role='form', method="POST", action="/signup")
                  h2
                    | Please Sign Up 
                    small It's free and always will be.
                  hr
                  // Email
                  .form-group
                    label.control-label.col-sm-2(for='email') Email:
                    .col-sm-10
                      input#email.form-control(type='email', placeholder='Enter Email', name="email")
                  // Password
                  .form-group
                    label.control-label.col-sm-2(for='password') Password:
                    .col-sm-10
                      input#password.form-control(type='password', placeholder='Enter Password', name='password')
                  .modal-footer
                    button.btn.btn-primary(type='submit', value="Sign UP") Submit
                    a.btn.btn-default(data-dismiss='modal') Close

